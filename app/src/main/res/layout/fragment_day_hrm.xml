<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fl_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/captureViewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="截图"/>

        <com.yxc.chartlib.recyclerchart.view.LineChartRecyclerView
            android:id="@+id/line_recycler"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="38dp"
            app:layoutManagerReverseLayout="false"
            app:contentPaddingTop="0dp"
            app:displayNumbers="80"
            app:enableXAxisLineCircle="false"
            app:enableLineFill="false"
            app:barBorderColor="@color/bar_chart_pink"
            app:xAxisFirstDividerColor="@color/bar_chart_pink"
            app:xAxisSecondDividerColor="@color/bar_chart_pink"
            app:chartColor="@color/black_80_transparent"
            app:yAxisLineColor="@color/bar_chart_pink"
            app:enableLeftYAxisLabel="false"
            app:enableRightYAxisLabel="false"
            app:enableScrollToScale="true"
            app:recyclerPaddingRight="3dp"
            app:xAxisScaleDistance="8" />


        <ImageView
            android:id="@+id/imgCaptureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/marker2"
            android:layout_marginTop="20dp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>
